import java.util.Scanner;

public class RPS {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		//generates random Rock Paper or Scissors for computer.
		//takes user input on the two
		//compares
		
		
		Scanner userInput = new Scanner(System.in);
		  boolean continueInput = true;
		  int computer = (int) Math.floor(Math.random() * 3); 
		  Object rpsComputer = ComputerRPS(computer);
		  int guess;
			do{
				try {
			
		  System.out.print("scissor (0), rock (1), paper (2):");
		   guess = userInput.nextInt();
		  userInput.close();
		  continueInput = false;
		  Object rpsGuess = UserGuess(guess);

		  System.out.print("The computer is " + rpsComputer + ". You are "
		    + rpsGuess);
		 
		  if (computer == guess) {
		   System.out.print(" too. It is a draw");
		  } else if (computer - guess == 1 || computer - guess == -2) {
		   System.out.print(". Computer won.");
		  } else if (computer - guess == -1 || computer - guess == 2) {
		   System.out.print(". You won.");
		  }
		  
				}
				catch (Exception e){
					System.out.println("Try again. (" +  "Incorrect input: an integer is required)");          
					userInput.nextLine(); // Discard input 
				}
			}
				while (continueInput);
			
		  
		 
		 }	
private static Object ComputerRPS(int Number) {
		// TODO Auto-generated method stub
	int computer = Number;
	String rpsComputer = "";

	switch (computer) {
	case 0:
		  rpsComputer = "scissor";
		  break;
	case 1:
		  rpsComputer = "rock";
		  break;
	case 2:
		  rpsComputer = "paper";
		  break;
	}
	return rpsComputer;
	}	
private static Object UserGuess(int guess){
	String rpsGuess = "";
	  switch (guess) {
	  case 0:
		  rpsGuess = "scissor";
		  break;
	  case 1:
		  rpsGuess = "rock";
		  break;
	  case 2:
		  rpsGuess = "paper";
		  break;
	  default:
	   System.out.print("Invalid input.");
	   System.exit(0);
	  }
	return rpsGuess;
	}
}
