	private static int getMinValue(int[] integers) 
	{
		// TODO Auto-generated method stub
		 int minValue = integers[0]; 
		 
		 for(int i=1;i<integers.length;i++)
		 { 
		      if(integers[i] < minValue)
		      { 
		        minValue = integers[i]; 
		      } 
		    } 
		    return minValue; 
	} 

