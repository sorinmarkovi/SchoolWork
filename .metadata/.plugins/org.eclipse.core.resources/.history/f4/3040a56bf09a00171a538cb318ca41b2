	public static void combination()
	{
		//TODO Write a program that displays all possible combinations for picking two numbers from integers 1 to 7.
		int counter = 0;
        for (int i = 1; i < 8; i++)
        {
            for (int j = i + 1; j < 8; j++) 
            {
                System.out.println(i + " " + j);
                counter++;
            }
        }
        System.out.println("Total combination is: " + counter);
	}
